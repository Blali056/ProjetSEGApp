<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProviderProfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <Spinner
                android:id="@+id/city"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phone"
                android:layout_below="@+id/textViewCity" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textViewLicence"
                android:layout_marginTop="174dp"
                android:ems="10"
                android:hint="Téléphone"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/textViewLicence" />

            <EditText
                android:id="@+id/company"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewLicence"
                android:layout_alignStart="@+id/textViewLicence"
                android:layout_below="@+id/textViewCompany"
                android:layout_marginTop="-10dp"
                android:ems="10"
                android:hint="Compagnie"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewLicence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/serviceTitle"
                android:layout_below="@+id/company"
                android:layout_marginTop="12dp"
                android:text="Licence :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/serviceTitle" />

            <TextView
                android:id="@+id/textViewCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/serviceTitle"
                android:layout_marginTop="574dp"
                android:text="Compagnie :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/serviceTitle" />

            <Button
                android:id="@+id/deleteService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/serviceTitle"
                android:layout_marginEnd="60dp"
                android:onClick="deleteServiceClick"
                android:text="SUPPRESSION"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp" />

            <TextView
                android:id="@+id/serviceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_below="@+id/savePersonalInfo"
                android:layout_marginTop="30dp"
                android:text="SERVICES"
                android:textColor="@color/blackGrey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/availablilitiesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_below="@+id/addService"
                android:layout_marginTop="35dp"
                android:text="DISPONIBILITÉS"
                android:textColor="@color/blackGrey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/personalInfo" />

            <Spinner
                android:id="@+id/province"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phone"
                android:layout_below="@+id/textViewProvince" />

            <TextView
                android:id="@+id/textViewProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/phone"
                android:layout_marginTop="450dp"
                android:text="Province :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phone"
                android:layout_below="@+id/province"
                android:layout_marginTop="15dp"
                android:text="Ville :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="Modifications"
                android:textColor="@color/blackGrey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/personalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="76dp"
                android:text="INFORMATIONS PERSONNELLES"
                android:textColor="@color/blackGrey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="108dp"
                android:text="Email :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/providerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_below="@+id/email"
                android:text="TextView"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="164dp"
                android:text="Téléphone :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/titleAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="232dp"
                android:text="Adresse :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/textViewStreetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="263dp"
                android:text="Numéro :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/personalInfo" />

            <EditText
                android:id="@+id/streetNumber"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="273dp"
                android:ems="10"
                android:hint="Numero"
                android:inputType="number"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/textViewPostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="386dp"
                android:text="Code postale :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/personalInfo" />

            <TextView
                android:id="@+id/textViewStreetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/streetName"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginBottom="-343dp"
                android:text="Nom de rue :"
                android:textColor="@color/blackGrey"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/personalInfo" />

            <EditText
                android:id="@+id/streetName"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/personalInfo"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/personalInfo"
                android:layout_marginTop="334dp"
                android:ems="10"
                android:hint="Nom de rue"
                android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <Button
                android:id="@+id/savePersonalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/licenceChoices"
                android:layout_marginEnd="41dp"
                android:onClick="personalInfoClick"
                android:text="Enregistrer" />

            <Button
                android:id="@+id/addService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/deleteService"
                android:layout_toEndOf="@+id/email"
                android:onClick="addServiceClick"
                android:text="AJOUT"
                android:layout_toRightOf="@+id/email" />

            <Button
                android:id="@+id/editAvailabilities"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:onClick="availabilitiesClick"
                android:text="Modifier" />

            <RadioGroup
                android:id="@+id/licenceChoices"
                android:layout_width="167dp"
                android:layout_height="81dp"
                android:layout_below="@+id/textViewLicence"
                android:layout_toEndOf="@+id/textViewProvince"
                android:layout_toRightOf="@+id/textViewProvince">

                <RadioButton
                    android:id="@+id/yesLicence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Oui" />

                <RadioButton
                    android:id="@+id/noLicence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Non" />
            </RadioGroup>

            <EditText
                android:id="@+id/pc6"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/title"
                android:layout_alignTop="@+id/pc5"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pc5"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pc4"
                android:layout_centerHorizontal="true"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pc4"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/title"
                android:layout_alignTop="@+id/pc3"
                android:layout_marginStart="6dp"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pc3"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pc2"
                android:layout_toEndOf="@+id/serviceTitle"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pc2"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/serviceTitle"
                android:layout_alignTop="@+id/pc1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pc1"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/phone"
                android:layout_marginTop="396dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="1"
                android:textSize="15sp" />


        </RelativeLayout>
    </ScrollView>
</android.widget.RelativeLayout>