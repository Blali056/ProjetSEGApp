<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderProfil">

    <TextView
        android:id="@+id/profilTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Votre profil"
        android:textColor="@color/blackGrey"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="62dp"
        android:text="Email :"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/providerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/providerPhone"
        android:layout_alignTop="@+id/email"
        android:text="TextView"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="93dp"
        android:text="Adresse :"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/providerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/providerEmail"
        android:layout_alignTop="@+id/address"
        android:text="TextView"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="126dp"
        android:text="Téléphone :"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/providerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/providerCompany"
        android:layout_alignTop="@+id/phone"
        android:text="TextView"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="157dp"
        android:text="Compagnie : "
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/providerCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/company"
        android:layout_marginStart="123dp"
        android:text="TextView"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="190dp"
        android:text="License :"
        android:textColor="@color/blackGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/providerLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/providerCompany"
        android:layout_alignTop="@+id/license"
        android:text="TextView"
        android:textColor="@color/blackGrey" />

    <TextView
        android:id="@+id/providerServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_centerVertical="true"
        android:text="Services Offerts"
        android:textColor="@color/blackGrey"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/providerAvailablilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/editProfil"
        android:text="Disponibilités"
        android:textColor="@color/blackGrey"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/editProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="editProfilClick"
        android:text="Modifier" />

    <ListView
        android:id="@+id/providerServicesList"
        android:layout_width="166dp"
        android:layout_height="191dp"
        android:layout_above="@+id/editProfil"
        android:layout_alignEnd="@+id/providerLicense" />

    <TextView
        android:id="@+id/textViewProvince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/providerServicesList"
        android:layout_marginEnd="27dp"
        android:text="Lundi        10h00-12h00" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewProvince"
        android:layout_marginBottom="193dp"
        android:text="Mardi        10h00-12h00" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewProvince"
        android:layout_marginBottom="165dp"
        android:text="Mercredi   10h00-12h00" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewProvince"
        android:layout_marginBottom="136dp"
        android:text="Jeudi         10h00-12h00" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewProvince"
        android:layout_marginBottom="106dp"
        android:text="Vendredi   10h00-12h00" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewProvince"
        android:layout_marginBottom="76dp"
        android:text="Samedi      10h00-12h00" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editProfil"
        android:layout_alignStart="@+id/textViewProvince"
        android:text="Dimanche  10h00-12h00" />

</android.widget.RelativeLayout>